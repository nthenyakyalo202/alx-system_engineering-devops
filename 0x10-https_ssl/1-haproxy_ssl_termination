global
    log     /dev/log local0
    maxconn 2048
    user    haproxy
    group   haproxy
    tune.ssl.default-dh-param 2048

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    retries 3
    option  redispatch
    timeout connect  5000
    timeout client  10000
    timeout client  10000
    option  server  10000
    option  forwardfor

frontend www-http
    bind   0.0.0.0:80
    reqadd X-Forwarded-Pronto:\ http
    default_backend www-backend

frontend www-https
    bind   0.0.0.0:443 ssl crt /etc/haproxy/certs/www.kisasi.tech.pem
    reqadd X-Forwarded-Pronto:\ https
    acl    letsencrypt-acl path_beg /.well-known/acme-chaglobal
    log     /dev/log local0
    maxconn 2048
    user    haproxy
    group   haproxy
    tune.ssl.default-dh-param 2048

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    retries 3
    option  redispatch
    timeout connect  5000
    timeout client  10000
    timeout client  10000
    option  server  10000
    option  forwardfor

frontend www-http
    bind   0.0.0.0:80
    reqadd X-Forwarded-Pronto:\ http
    default_backend www-backendfrontend www-http

frontend www-https
    bind   0.0.0.0:443 ssl crt /etc/haproxy/certs/www.y-k-a.tech.pem
    reqadd X-Forwarded-Pronto:\ https
    acl    letsencrypt-acl path_beg /.well-known/acme-challenge/
    use_backend letsencrypt-backend if letsencrypt-acl
    default_backend www-backendllenge/
    use_backend letsencrypt-backend if letsencrypt-acl
    default_backend www-backend

backend www-backend
    balance  roundrobin
    redirect scheme https if !{ ssl_fc }
    server 98542-web-01 18.206.206.55:80 check
    server 98542-web-02 54.157.174.220:80 check

backend letsencrypt-backend
    server letsencrypt 127.0.0.1:54321
